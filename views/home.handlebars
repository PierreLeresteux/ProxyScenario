<h3>Entries :</h3>
<table class="ink-table alternating hover" data-page-size="30">
    <thead>
    <th data-sortable="true">Method</th>
    <th data-sortable="true">URL</th>
    <th data-sortable="true">Duration</th>
    <th>Actions</th>
    </thead>
    {{#each docs}}
        <tr>
            <td><span class="ink-label {{getLabelColor}}">{{this.method}}</span></td>
            <td style="margin-left:10px">{{this.url}}</td>
            <td style="margin-left:10px">{{this.duration}} <span class="ink-badge" id="{{this._id}}_alert"></span></td>
            <td><i class="toggle icon-edit icon-medium" data-target="#{{this._id}}_panel"></i></td>
        </tr>
       <!-- <tr id="{{this._id}}_panel" class="hide-all" style="display: none">
            <td colspan="3">
                <label class="content-right" for="{{this._id}}_bodyin">Request : </label><textarea
                    id="{{this._id}}_bodyin">{{this.bodyIn}}</textarea>
                <label class="content-right" for="{{this._id}}_bodyout">Response : </label><textarea
                    id="{{this._id}}_bodyout">{{this.bodyOut}}</textarea>
                <button data-entryid="{{this._id}}" class="modifyButton ink-button">Modify</button>
            </td>
        </tr>-->
    {{/each}}
</table>
<nav class="ink-navigation">
    <ul class="pagination"></ul>
</nav>
<div class="ink-shade">
    <div id="modal" class="ink-modal" data-trigger=".toggle">
        <div class="modal-header"> <button class="modal-close ink-dismiss"></button>
            <h5>Edit the entry</h5></div>
        <div class="modal-body"></div>
        <div class="modal-footer"><button data-entryid="{{this._id}}" class="modifyButton ink-button blue">Modify</button><button class="ink-button modal-close">Cancel</button></div>
    </div>
</div>

